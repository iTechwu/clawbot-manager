{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": []
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
